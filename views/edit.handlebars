{{! -Edit Blog Post Page- }}
<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto text-left">

      <form class="createBlogPost" id="submitEdit">
        {{! -POST- }}
        {{! -title- }}
        <div class="mt-5 mb-3">
          <label class="form-label">Title</label>
          <input
            class="form-control"
            id="titleInput"
            maxlength="50"
            value="{{title}}"
          />
        </div>
        {{! -body- }}
        <div class="mb-3">
          <label class="form-label">Body</label>
          <textarea
            class="form-control"
            id="bodyInput"
            rows="10"
          >{{description}}</textarea>
        </div>
        {{! -submit Btn- }}
        <div class="text-center">
          <button
            type="submit"
            class="text-center mt-3 btn btn-dark btn-lg btn-block"
          >Submit</button>
        </div>
      </form>

    </div>
  </div>
</div>

<script src="/js/submitNewEdit.js"></script>