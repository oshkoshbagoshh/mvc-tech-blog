<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{! -Bootstrap CDN Link}}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    {{! -Google Fonts Link- }}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gravitas+One&family=Habibi&family=Libre+Caslon+Display&family=Press+Start+2P&family=Prosto+One&display=swap"
      rel="stylesheet"
    />
    {{! -CSS Style Sheet Link- }}
    <link rel="stylesheet" href="/css/style.css" />
    <title>Barry's Tech Blog</title>
  </head>

  <body>
    <header class="navBar">
      <nav>
        {{#if logged_in}}
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <button class="no-button" id="logout">Logout</button>
        {{else}}
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <a href="/login">Login</a>
        {{/if}}
      </nav>
    </header>

    <h1 class="text-center">Barry's Tech Blog</h1>

    <main>
      {{{body}}}
    </main>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

  </body>

</html>